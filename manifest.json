{
  "manifest_version": 2,
  "name": "Resume Uploader",
  "version": "1.0",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Resume Uploader"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "activeTab",
    "downloads",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "https://api.openai.com/"
  ],
  "web_accessible_resources": [
    "https://cdnjs.cloudflare.com/ajax/libs/pdf.js/3.4.120/pdf.min.js"
  ]
}
